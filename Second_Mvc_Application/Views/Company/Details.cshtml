@model Second_Mvc_Application.Models.CompanyModel

@{
    ViewBag.Title = "Details";
}

<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container mt-5">
        <div class="row" style="display:flex;justify-content:center">
            <div class="col-md-6 bg-success p-4 rounded shadow">
                <h4 class="text-center text-white mb-4">Company Details</h4>
                <hr class="bg-white" />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="mb-3 row">
                    <label class="col-sm-4 col-form-label text-white text-end">
                        @Html.DisplayNameFor(model => model.Comp_Name)
                    </label>
                    <div class="col-sm-8">
                        @Html.EditorFor(model => model.Comp_Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Comp_Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />
                <div class="mb-3 row">
                    <label class="col-sm-4 col-form-label text-white text-end">
                        @Html.DisplayNameFor(model => model.Stength)
                    </label>
                    <div class="col-sm-8">
                        @Html.EditorFor(model => model.Stength, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Stength, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />
                <div class="mb-3 row">
                    <label class="col-sm-4 col-form-label text-white text-end">
                        @Html.DisplayNameFor(model => model.Remarks)
                    </label>
                    <div class="col-sm-8">
                        @Html.EditorFor(model => model.Remarks, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Remarks, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row " style="padding-top:15px;margin-bottom:5px;">
                    <div class="col-sm-offset-4">
                        <input type="button" value="Back To Index" class="btn btn-warning" onclick="BackToIndex();" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    function BackToIndex() {
        window.location.href = '@Url.Action("Index","Company")'
    }
</script>
